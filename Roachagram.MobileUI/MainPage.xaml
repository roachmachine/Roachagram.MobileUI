<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roachagram.MobileUI.MainPage"
             BackgroundColor="#f8e1b6"
             xmlns:views="clr-namespace:Roachagram.MobileUI.Views">



    <ScrollView HorizontalOptions="Fill" BackgroundColor="#f8e1b6">

        <Grid RowSpacing="0" HorizontalOptions="Fill">
            <Grid.RowDefinitions>
                <!-- NEW top banner row -->
                <RowDefinition Height="Auto" /> <!-- NoConnectionBanner -->
                <RowDefinition Height="Auto" /> <!-- Image -->
                <RowDefinition Height="Auto" /> <!-- Label (title) -->
                <RowDefinition Height="Auto" /> <!-- Label (subtitle) -->
                <RowDefinition Height="Auto" /> <!-- Input row -->
                <RowDefinition Height="Auto" /> <!-- ActivityIndicator -->
                <RowDefinition Height="*" />    <!-- WebView (fills remaining space) -->
            </Grid.RowDefinitions>

            <!-- assign banner to the new top row -->
            <views:NoConnectionBanner x:Name="ConnectionBanner" 
                         Grid.Row="0"
                         IsVisible="False"/>

            <Image
                Grid.Row="1"
                Source="roachagram_robot.png"
                HeightRequest="200"
                Aspect="AspectFit"
                Margin="0,10,0,10"
                SemanticProperties.Description="roachagram robot face logo"
                HorizontalOptions="Center" />

            <Label
                Grid.Row="2"
                Text="Anagrams Powered by Roach Machine © 2025"
                FontFamily="{OnPlatform Android='monospace', iOS='Menlo', MacCatalyst='Menlo', WinUI='Consolas'}"
                TextColor="#478e99"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                SemanticProperties.Description="Anagrams powered by Roach Machine" />

            <Label
                Grid.Row="3"
                Text="Smart anagrams in ~15 seconds, sometimes a bit longer."
                FontFamily="{OnPlatform Android='monospace', iOS='Menlo', MacCatalyst='Menlo', WinUI='Consolas'}"
                TextColor="#478e99"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,10"
                SemanticProperties.Description="Smart anagrams in ~15 seconds, sometimes a bit longer." />

            <!-- Input Row: Entry + Button implemented as a Grid -->
            <Grid Grid.Row="4" ColumnSpacing="10" Margin="0,0,0,0" HorizontalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Entry
                    Grid.Column="0"
                    x:Name="InputEntry"
                    Placeholder="Enter words or a name"
                    TextColor="Black"
                    WidthRequest="200"
                    BackgroundColor="White"
                    PlaceholderColor="LightGray"
                    SemanticProperties.Hint="Enter words or a name"
                    TextChanged="InputEntry_TextChanged" />

                <Button
                    Grid.Column="1"
                    x:Name="SubmitBtn"
                    WidthRequest="75"
                    BackgroundColor="White"
                    TextColor="Black"
                    Text="Go!"
                    SemanticProperties.Hint="Submits input for anagrams"
                    Clicked="OnSubmit"/>
            </Grid>

            <ActivityIndicator
                Grid.Row="5"
                x:Name="LoadingIndicator"
                IsVisible="false"
                IsRunning="false"
                Color="#e37335"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="80"
                WidthRequest="80"
                Margin="0,20,0,0"
                SemanticProperties.Hint="Thinking..." />

            <WebView
                Grid.Row="6"
                x:Name="RoachagramResponseView"
                BackgroundColor="#f8e1b6"
                HeightRequest="1300"
                HorizontalOptions="Fill"
                Source=""
                SemanticProperties.Description="Displays the Roachagram response as HTML"
                InputTransparent="True" />
        </Grid>
    </ScrollView>
</ContentPage>