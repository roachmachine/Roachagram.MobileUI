<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roachagram.MobileUI.Views.NoConnectionBanner"
             x:Name="NoConnectionView">
    <Border Background="#FF6B6B"
            Padding="15,10"
            StrokeShape="Rectangle"
            StrokeThickness="0"
            IsVisible="{Binding IsVisible, Source={x:Reference NoConnectionView}}"
            SemanticProperties.Description = "No internet connection banner">
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="⚠️" FontSize="20"/>
            <Label Text="No Internet Connection" 
                   TextColor="White" 
                   FontSize="16"
                   VerticalOptions="Center"/>
            <!-- Manual refresh button to re-check connectivity -->
            <Button x:Name="RefreshButton"
                    Text="Retry"
                    WidthRequest="100"
                    Clicked="OnRefreshClicked"
                    TextColor="White"
                    BackgroundColor="Red"
                    VerticalOptions="Center"
                    SemanticProperties.Description="Retry internet connection check"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>